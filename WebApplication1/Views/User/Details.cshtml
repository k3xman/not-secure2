@model WebApplication1.Models.User

@{
    ViewData["Title"] = $"User Details - {Model.Username} (BAD SECURITY DEMO)";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-danger">
                <h4><i class="bi bi-exclamation-triangle"></i> WARNING: BAD SECURITY PRACTICES</h4>
                <p>This page displays user information with exposed password hash for educational purposes only.</p>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2><i class="bi bi-person"></i> User Details (Vulnerable)</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <h5>User Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Username:</dt>
                                <dd class="col-sm-8">@Model.Username</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm:ss")</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5>Password Information (BAD!)</h5>
                            <div class="alert alert-warning">
                                <h6><i class="bi bi-shield-exclamation"></i> Security Issues:</h6>
                                <ul class="mb-0">
                                    <li>Password hash is exposed</li>
                                    <li>Using MD5 (cryptographically broken)</li>
                                    <li>No salt used</li>
                                    <li>Vulnerable to rainbow table attacks</li>
                                </ul>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Password Hash (MD5):</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" value="@Model.Password" readonly />
                                    <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('@Model.Password')">
                                        <i class="bi bi-clipboard"></i> Copy
                                    </button>
                                </div>
                                <small class="text-muted">This hash can be cracked using online MD5 crackers</small>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle"></i> How This Page is Vulnerable:</h6>
                        <ul class="mb-0">
                            <li>SQL injection vulnerability in the Details action</li>
                            <li>Exposes sensitive password information</li>
                            <li>No access control or authorization</li>
                            <li>Internal errors are exposed to users</li>
                        </ul>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Users
                        </a>
                        <div>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="username" value="@Model.Username" />
                                <button type="submit" class="btn btn-outline-danger" 
                                        onclick="return confirm('Are you sure you want to delete user @Model.Username?')">
                                    <i class="bi bi-trash"></i> Delete User
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        alert('Password hash copied to clipboard!');
    }, function(err) {
        console.error('Could not copy text: ', err);
    });
}
</script> 