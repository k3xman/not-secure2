@model IEnumerable<WebApplication1.Models.TodoItem>

@{
    ViewData["Title"] = "Todo List";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Todo List</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Todo
                </a>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No todo items yet. Create your first todo!
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <div class="todo-item border-bottom py-3 @(item.IsCompleted ? "completed" : "")">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="d-flex align-items-center">
                                            <form asp-action="ToggleComplete" method="post" class="me-3">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-link p-0">
                                                    <i class="bi @(item.IsCompleted ? "bi-check-circle-fill text-success" : "bi-circle text-muted")" style="font-size: 1.5rem;"></i>
                                                </button>
                                            </form>
                                            <div>
                                                <h5 class="mb-1 @(item.IsCompleted ? "text-muted text-decoration-line-through" : "")">
                                                    @item.Title
                                                </h5>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <p class="text-muted mb-1 @(item.IsCompleted ? "text-decoration-line-through" : "")">
                                                        @item.Description
                                                    </p>
                                                }
                                                <small class="text-muted">
                                                    Created: @item.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                                    @if (item.CompletedAt.HasValue)
                                                    {
                                                        <span> | Completed: @item.CompletedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                                                    }
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                    onclick="return confirm('Are you sure you want to delete this todo item?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .todo-item:last-child {
        border-bottom: none !important;
    }
    
    .completed {
        opacity: 0.7;
    }
    
    .btn-link:hover {
        text-decoration: none;
    }
</style> 